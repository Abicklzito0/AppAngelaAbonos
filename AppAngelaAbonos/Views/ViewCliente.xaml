<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             x:Class="AppAngelaAbonos.Views.ViewCliente">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Guardar" Clicked="Save_Clicked"  />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
    
        <StackLayout>
         
       
           

            <Editor  Placeholder="Nombre" Text="{Binding Item.Nombre}" FontSize="Small" Margin="0" />
          
            <Editor  Placeholder="Direccion" Text="{Binding Item.Direccion}" FontSize="Small" Margin="0" />
         
            <Editor  Placeholder="Telefono" Text="{Binding Item.Telefono}" FontSize="Small" Margin="0" />
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>